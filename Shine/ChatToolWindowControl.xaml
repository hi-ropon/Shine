<UserControl x:Class="Shine.ChatToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <!-- ボタン用のスタイル -->
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <!-- 角丸の値を調整 -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- チャット履歴表示 -->
            <RowDefinition Height="*" />
            <!-- ローディング用プログレスバー -->
            <RowDefinition Height="Auto" />
            <!-- 入力リッチテキストボックス -->
            <RowDefinition Height="Auto" />
            <!-- チェックボックス・補足テキスト・トークン数表示 -->
            <RowDefinition Height="Auto" />
            <!-- ボタン類 -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- チャット履歴表示部分 -->
        <wv2:WebView2 x:Name="ChatHistoryWebView" Grid.Row="0" Margin="5"/>

        <!-- ローディングアイコンとしてのプログレスバー -->
        <ProgressBar x:Name="LoadingProgressBar"
                     Grid.Row="1"
                     Height="20"
                     Margin="5"
                     IsIndeterminate="True"
                     Visibility="Collapsed"/>

        <!-- 入力リッチテキストボックス -->
        <Grid Grid.Row="2">
            <RichTextBox x:Name="InputRichTextBox"
                         Margin="5"
                         Height="80"
                         TextChanged="InputRichTextBox_TextChanged"
                         KeyDown="InputRichTextBox_KeyDown">
                <RichTextBox.Resources>
                    <Style TargetType="Paragraph">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
            <!-- 候補表示用ポップアップ -->
            <Popup x:Name="MentionPopup"
                   Placement="Top"
                   PlacementTarget="{Binding ElementName=InputRichTextBox}"
                   AllowsTransparency="True"
                   StaysOpen="False"
                   HorizontalOffset="0"
                   VerticalOffset="0">
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5">
                    <ListBox x:Name="MentionListBox"
                             Width="250"
                             MaxHeight="300"
                             PreviewKeyDown="MentionListBox_PreviewKeyDown"
                             MouseDoubleClick="MentionListBox_MouseDoubleClick" />
                </Border>
            </Popup>
        </Grid>

        <!-- チェックボックス、補足テキスト、およびトークン数表示 -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!-- 左側: チェックボックスと補足テキスト -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <CheckBox x:Name="IncludeOpenFilesCheckBox"
                          Content="エディタで開いている全てのプログラムを含む"
                          VerticalAlignment="Center" />
                <TextBlock Grid.Row="1"
                           Text="AIの提案は不正確である可能性があります"
                           FontSize="12"
                           Margin="5,2,0,0"/>
            </Grid>
            <!-- 右側: トークン数表示エリア -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,5,0">
                <TextBlock x:Name="TokenCountLabel"
                           Text="入力トークン数:" 
                           FontWeight="Bold" />
                <TextBox x:Name="TokenCountTextBox"
                         IsReadOnly="True"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="12" />
            </StackPanel>
        </Grid>

        <!-- ボタン類 -->
        <Grid Grid.Row="4" Margin="5">
            <Grid.ColumnDefinitions>
                <!-- 有効化ボタン -->
                <ColumnDefinition Width="Auto"/>
                <!-- ModelComboBox -->
                <ColumnDefinition Width="Auto"/>
                <!-- ボタン群 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 有効化ボタン -->
            <Button x:Name="EnableButton"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="有効化"
                    Margin="5"
                    Width="50"
                    Height="30"
                    Click="EnableButton_Click"
                    ToolTip="チャット機能を有効にします"
                    Grid.Column="0" />

            <!-- プルダウンメニュー（ComboBox） -->
            <ComboBox x:Name="ModelComboBox"
                      Margin="5"
                      Width="95"
                      Height="25"
                      Grid.Column="1"
                      SelectionChanged="ModelComboBox_SelectionChanged" />

            <!-- ボタン群 -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <!-- 画像入力ボタン -->
                <Button x:Name="ImageInputButton"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="5"
                        Width="30"
                        Height="25"
                        Click="ImageInputButton_Click"
                        Background="White"
                        ToolTip="画像を入力します"
                        BorderThickness="0"
                        BorderBrush="Transparent">
                    <Image Source="Resources/IconImageInput.png" Stretch="Uniform"/>
                </Button>

                <!-- 要約ボタン -->
                <Button x:Name="SummarizeDiffButton"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="5"
                        Width="30"
                        Height="25"
                        Click="SummarizeDiffButton_Click"
                        Background="White"
                        ToolTip="コミットメッセージを生成します（不正確である可能性があります）"
                        BorderThickness="0"
                        BorderBrush="Transparent">
                    <Image Source="Resources/IconSummary.png" Stretch="Uniform"/>
                </Button>

                <!-- クリアボタン -->
                <Button x:Name="ClearButton"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="5"
                        Width="30"
                        Height="25"
                        Click="ClearButton_Click"
                        Background="White"
                        ToolTip="チャットをクリアします"
                        BorderThickness="0"
                        BorderBrush="Transparent">
                    <Image Source="Resources/IconClear.png" Stretch="Uniform"/>
                </Button>

                <!-- 送信ボタン -->
                <Button x:Name="SendButton"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="5"
                        Width="45"
                        Height="30"
                        Click="SendButton_Click"
                        Background="White"
                        ToolTip="質問を送信します"
                        BorderThickness="0"
                        BorderBrush="Transparent">
                    <Image Source="Resources/IconSend.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>